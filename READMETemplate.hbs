<!DOCTYPE html>
<html>

<head>
    <title>{{name}} ver. {{version}}</title>
    <meta name="viewport">
    {{#each style}}
    <style>
        {{this}}
    </style>
    {{/each}}
</head>

<body>
    <header id="mainHeader">
        <img src="{{logo.src}}" title="{{logo.title}}" width="200">
        <h2>{{name}} ver. {{version}}</h2>
        <div id="badges">
            {{#each badges}}
                <img src="{{src}}" title="{{title}}">
            {{/each}}
        </div>
    </header>

    <section id="main">
        <p>{{{description}}}</p>

        {{#if homepage}}
        <h3>Home page</h3>
        <a href="{{homepage}}">{{homepage}}</a>
        {{/if}}

        {{#if repository}}
        <h3>Repository</h3>
        <a href="{{repository.url}}">{{repository.url}}</a>
        {{/if}}

        {{#if docs}}
        <h3>Documentation</h3>
        <a href="{{docs}}">{{docs}}</a>
        {{/if}}

        {{#if install}}
        <h3>Installation</h3>
        <pre><code>{{install}}</code></pre>
        {{/if}}

        {{#if bugs}}
        <h3>Bugs</h3>
        <a href="{{bugs.url}}">{{bugs.url}}</a>
        {{/if}}

        {{#if examples.length}}
        <h3>Examples</h3>
        {{#each examples}}
        <pre><code>{{{.}}}</code></pre>
        {{/each}}
        {{/if}}

        <h3>Dependencies</h3>
        <ul>
            {{#each dependencies}}
            <li><a href="{{repository.url}}">{{name}}: {{version}}</a> {{{description}}}
                {{#if author.name}}
                (by
                {{#if author.url}}<a href="{{author.url}}">{{/if}}
                    {{author.name}}
                    {{#if author.url}}</a>{{/if}}
                )
                {{/if}}
            </li>
            {{/each}}
        </ul>

        {{#if devDependencies.length}}
        <h3>devDependencies</h3>
        <ul>
            {{#each devDependencies}}
            <li><a href="{{repository.url}}">{{name}}: {{version}}</a> {{{description}}}
                {{#if author.name}}
                (by
                {{#if author.url}}<a href="{{author.url}}">{{/if}}
                    {{author.name}}
                    {{#if author.url}}</a>{{/if}}
                )
                {{/if}}
            </li>
            {{/each}}
        </ul>
        {{/if}}

        {{#if todo.length}}
        <h3>Todo</h3>
        <ul>
            {{#each todo}}<li>{{{.}}}</li>{{/each}}
        </ul>
        {{/if}}

        {{#if contributors.length}}
        <h3>Contributors</h3>
        <ul>
            {{#each contributors}}
            <li>
                {{#if url}}<a href="{{url}}">{{name}}</a>{{else}}{{name}}{{/if}}
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </section>
    <footer id="mainFooter">
        <p align="right">
            Generated by
            <a href="{{Modules.node-package-tools.homepage}}">node-package-tools
                {{Modules.node-package-tools.version}}
            </a>
        </p>
    </footer>
</body>

</html>